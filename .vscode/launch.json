{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "dezog",
			"request": "launch",
			"name": "DeZog: Spectrum Next (CSpect)",
			"remoteType": "cspect",
			"rootFolder": "${workspaceFolder}",
			"load": "${workspaceFolder}/build/absolute_chaos.nex",
			"topOfStack": "0xFF58", // Next; use 0x5D58 for 128K targets
			"cspect": {
				"hostname": "localhost",
				"port": 11000
			},
			"preLaunchTask": "build+run CSpect (Next)",
			"z88dkv2": [
				{
					"path": "*.lis",
					"mapFile": "${workspaceFolder}/build/absolute_chaos.map",
					"srcDirs": [
						"${workspaceFolder}/src",
						"${workspaceFolder}/src/game",
						"${workspaceFolder}/src/assets",
						"${workspaceFolder}/src/audio",
						"${workspaceFolder}/src/engine",
						"${workspaceFolder}/src/screens",
					],
					"excludeFiles": []
				}
			]
		},
		{
			"type": "dezog",
			"request": "launch",
			"name": "DeZog: 128K (ZSIM)",
			"remoteType": "zsim",
			"rootFolder": "${workspaceFolder}",
			"load": "${workspaceFolder}/build/absolute_chaos.sna",
			"topOfStack": "__register_sp",
			"zsim": {
				"preset": "spectrum",
				"memoryModel": "ZX128K",
				"visualMemory": true
			},
			"preLaunchTask": "make zx128",
			"z88dkv2": [
				{
					"path": "src/**/*.lis",
					"mapFile": "${workspaceFolder}/build/absolute_chaos.map",
					"srcDirs": [
						"${workspaceFolder}/src",
						"${workspaceFolder}/src/game",
						"${workspaceFolder}/src/assets",
						"${workspaceFolder}/src/audio",
						"${workspaceFolder}/src/engine",
						"${workspaceFolder}/src/screens",
					],
					"excludeFiles": []
				}
			]
		}
	]
}